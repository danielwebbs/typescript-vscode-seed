{
    "include": [
        "src/*"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "declaration": false,
        "listEmittedFiles": true,
        "outDir": "dist/",
        "lib": [
            "es2015",
            "es2016"
        ]
    }
}